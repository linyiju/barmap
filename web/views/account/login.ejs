<html>
    <head>
        <%- include('../common/header')%>
        <link rel="stylesheet" href="/css/login.css">
    </head>
    <body class="text-center">
        <form method="POST" class="form-signin">
            <img src="/img/beer.png" alt="BarMap">
            <h1 class="h3 mb-3 font-weight-normal">Please Log In</h1>
            <% if (data.isValid) {%>
                <div class="alert alert-danger" role="alert">
                    帳號密碼錯誤
                  </div>
            <% }%>
            <label for="userName" class="sr-only">Account:</label>
            <input type="userName" id="userName" name="userName" class="form-control" placeholder="Account" required autofocus>    
            <label for="userPwd" class="sr-only">Password:</label>
            <input type="password" id="userPwd" name="userPwd" class="form-control" placeholder="Password" required>
            <br>
            <button type="submit" class="btn btn-primary btn-block">Submit</button>
            <br>
            <a href="/account/signup">
                <button type="button" class="btn btn-success btn-block">Sign Up</button>
            </a>  
        </form>
    </body>
</html>